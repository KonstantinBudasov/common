.nav-dropdown__link--human-resources
  @extend $nav-dropdown-link-icon

  &:before
    background-image: url("../images/_modules/navigations/main-menu/redesigned-v2/icon-human-resources.svg")

.nav-dropdown__link--document-generation
  @extend $nav-dropdown-link-icon

