.nav-dropdown__link--logout
.nav-dropdown__link--my-account
  &:before
    top 6px
    left 6px

.nav-dropdown--user
  transform none
  left auto
  right 0
  width 312px
  flex-wrap wrap
  padding 24px

  .nav-dropdown__info,
  .nav-dropdown__list
    width 100%

.nav-dropdown__info-avatar-wrapper
  width 48px
  height 48px
  border-radius 16px

.nav-dropdown__info
  padding-bottom 24px
  margin-bottom 24px
  border-bottom 1px solid #dddddd

.nav-dropdown__info-row
  grid-row(12)
  align-items center

.nav-dropdown__info-column
  grid-column-padding(12)

.nav-dropdown__info-column--avatar
  width 60px

.nav-dropdown__info-name
  line-height 24px
  font-size 14px
  font-weight 700

.nav-dropdown__info-mail
  line-height 20px
  font-size 12px

.nav-dropdown__info--stats
  padding-bottom 16px
  margin-bottom 8px

  .nav-dropdown__info-row
    &:not(:last-child)
      margin-bottom 8px

  .nav-dropdown__info-column
    font-size 12px
    line-height 24px

    &:first-child
      width 96px

    &:last-child
      font-weight 700
      grid-column-width-auto()

.nav-dropdown__item
  position relative

  &:not(:last-child)
    margin-bottom 16px

  &.is-open
    .nav-submenu
      opacity 1
      z-index 1
      visibility visible
