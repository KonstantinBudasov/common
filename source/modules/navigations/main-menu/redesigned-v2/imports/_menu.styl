.nav
  font-family $font-family-base

.nav__list
  grid-row(32)
  justify-content flex-end
  align-items center

  .button,
  a.button
    padding 6px
    font-size 12px
    line-height 16px
    font-weight $font-weight-semiBold
    width 150px
    margin-left 12px
    margin-right 12px

  .nav__link,
  .nav-dropdown__link
    flex-center-y()
    font-size 16px
    line-height 24px
    color $gray-900
    white-space nowrap
    text-decoration none

    svg
      margin-right 8px

  .nav-dropdown__link--stats
    font-weight $font-weight-bolder
    color #4a90e2
    text-reduced-with-dots()
    display block
    padding 0
    min-width 1px
    max-width 160px
    font-size 12px
    line-height 24px

    &:hover
      color #4a90e2
      opacity .6

.nav__link
  position relative
  padding 16px 12px
  font-weight 600

  &:hover
  &.is-active
    color #E74C3C

.nav__item
  position relative

  &.is-open
    .nav-dropdown
      opacity 1
      z-index 1
      visibility visible

    .nav__link--toggler
      &:before
        transform translateY(-50%) rotate(180deg)

      &:after
        opacity 1

.nav__item--user
  .nav__link
    padding-top 12px
    padding-bottom 12px
    cursor pointer

    &:after
      display none

.nav__user-avatar-wrapper,
.nav-dropdown__info-avatar-wrapper
  overflow hidden

.nav__user-avatar-wrapper
  border-radius 50%
  width 32px
  height 32px

.nav__user-avatar
  width 100%
  height 100%
  object-fit cover

.nav-top
  background-color $gray-900
  padding-bottom $header-height

  +below($media-screen-desktop - 1)
    display none

  .nav-top__inner
    container()
    padding-top 10px
    padding-bottom 10px

  .nav-top__list
    grid-row(24)
    justify-content flex-end

  .nav-top__item
    margin 0 12px

  .nav-top__link
    color $white
    font-size 12px
    line-height 16px
    display block
    transitions()
    text-decoration none

    &:hover
      opacity .6

.page-header--redesigned
  background-color $white
  position absolute
  top auto
  bottom 0
  left 0
  right 0
  z-index 200

  .page-header__inner
    +below($media-screen-desktop - 1)
      padding-top 12px
      padding-bottom 12px

.page-header--fixed
  &.is-fixed
    position fixed
    top 0
    bottom auto

body
  &.is-redesigned-menu
    #overlay_message
      transform translateY(46px)
