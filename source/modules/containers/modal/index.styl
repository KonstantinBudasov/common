.scroll-locked
  overflow hidden
  touch-action none

.modal
  display none

  &.is-open
    display block

.modal__overlay
  position fixed
  position-zero()
  flex-center-xy()
  z-index 1000
  background-color rgba($black, 0.5)
  -webkit-tap-highlight-color transparent

  +above($media-screen-desktop)
    width 100vw

  .with-transparent-overlay &
    background-color rgba(0, 0, 0, 0)

    &:focus
      outline none

.modal__container
  flex-center-xy()
  width 100%
  height 100%

.modal-animation-slide
  display none

  &.is-open
    display block

body:not(.is-ie11)
  .modal-animation-slide[aria-hidden="false"]
    .modal__overlay
      animation modal-fadeIn 0.25s cubic-bezier(0, 0, 0.2, 1)

    .modal__container
      animation modal-slideIn 0.25s cubic-bezier(0, 0, 0.2, 1)

  .modal-animation-slide[aria-hidden="true"]
    .modal__overlay
      animation modal-fadeOut 0.25s cubic-bezier(0, 0, 0.2, 1)

    .modal__container
      animation modal__slideOut 0.25s cubic-bezier(0, 0, 0.2, 1)

body.is-ie11
  .modal-animation-slide[aria-hidden="false"]
    .modal__overlay,
    .modal__container
      display flex

  .modal-animation-slide[aria-hidden="true"]
    .modal__overlay,
    .modal__container
      display none

.modal__overlay
  will-change opacity

.modal__container
  will-change transform

$loader-size-lg = 60px
$loader-size-md = 48px
$loader-size-sm = 30px
$loader-size-xs = 18px

.modal--loader
  .loader
    position fixed
    top 50%
    left 50%
    z-index $zindex-1000
    display none
    margin -30px 0 0 -30px
    width $loader-size-lg
    height $loader-size-lg
    font-size 0
    animation rotation 900ms cubic-bezier(0.4, 0, 0.2, 1) infinite both

    &.is-active
      display block

  .loader--lg
    width $loader-size-lg
    height $loader-size-lg

  .loader--md
    width $loader-size-md
    height $loader-size-md

  .loader--sm
    width $loader-size-sm
    height $loader-size-sm

  .loader--xs
    width $loader-size-xs
    height $loader-size-xs

@keyframes modal-fadeIn
  from
    opacity 0

  to
    opacity 1

@keyframes modal-fadeOut
  from
    opacity 1

  to
    opacity 0

@keyframes modal-slideIn
  from
    transform translateY(20px)

  to
    transform translateY(0)

@keyframes modal-slideOut
  from
    transform translateY(0)

  to
    transform translateY(-20px)


@keyframes rotation
  from
    transform rotate(0deg)

  to
    transform rotate(360deg)
