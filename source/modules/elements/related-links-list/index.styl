.related-links-list
  +above($media-screen-tablet)
    column-gap 32px
    column-count 2

  +above($media-screen-desktop)
    column-count 3

.related-links-list__item
  margin-bottom 24px
  width 100%
  display inline-block

  &:last-child
    +below($media-screen-tablet)
      margin-bottom 0

.related-links-list__link
  display block
  border-radius $border-radius
  background-color $white
  padding 12px 12px 12px 40px
  position relative
  line-height $line-height-small
  font-size $font-size-small
  color $gray-900
  font-weight $font-weight-normal

  &:before,
  &:after
    pseudo()
    background-color #E0E0E0
    left 16px
    width 8px
    height 2px
    transition .2s background-color

  &:before
    transform rotate(45deg)
    top 18px

  &:after
    transform rotate(-45deg)
    top 23px

  &:hover
    color $gray-900

    &:before, &:after
      background-color $orange-500
