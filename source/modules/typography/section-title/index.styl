.section-title
  text-align center
  color $title-color
  font-weight $font-weight-extraBold
  font-size 20px
  line-height 32px
  margin-bottom 12px
  letter-spacing -0.01em

  +above($media-screen-tablet)
    font-size 24px
    line-height 36px

  +above($media-screen-tablet-lg)
    margin-bottom 16px

  +above($media-screen-desktop-lg)
    font-size 36px
    line-height 52px
    margin-bottom 20px

.section-title--primary
  font-size 24px
  line-height 36px

  +above($media-screen-tablet)
    font-size 36px
    line-height 52px

  +above($media-screen-desktop-lg)
    font-size 48px
    line-height 64px

.section-title--secondary
  font-weight $font-weight-bolder
  font-size 20px
  line-height 28px

  +above($media-screen-tablet)
    font-size 28px
    line-height 40px

  +above($media-screen-tablet-lg)
    font-size 28px
    line-height 40px

  +above($media-screen-desktop-lg)
    font-size 32px
    line-height 44px
