.tooltipster-base
  position absolute
  display flex
  pointer-events all
  user-select none
  box-shadow 0 4px 8px 0 rgba($black, 0.11)

.tooltipster-box
  flex 1 1 auto
  position relative
  z-index 1

.tooltipster-content
  overflow auto
  padding 12px 16px
  max-width 100%
  max-height 100%

.tooltipster-ruler
  position fixed
  top 0
  right 0
  bottom 0
  left 0
  visibility hidden
  overflow hidden

.tooltipster-fade
  opacity 0
  transition-property opacity

  &.tooltipster-show
    opacity 1

.tooltipster-grow
  transition-property transform
  transform scale(0, 0)
  will-change transform
  -webkit-backface-visibility hidden

  &.tooltipster-show
    transition-timing-function cubic-bezier(0.175, 0.885, 0.32, 1.15)
    transform scale(1, 1)

.tooltipster-swing
  opacity 0
  transition-property transform
  transform rotateZ(4deg)

  &.tooltipster-show
    opacity 1
    transition-timing-function cubic-bezier(0.23, 0.635, 0.495, 2.4)
    transform rotateZ(0deg)

.tooltipster-fall
  transition-timing-function cubic-bezier(0.175, 0.885, 0.32, 1.15)
  transition-property top

  &.tooltipster-initial
    top 0 !important

  &.tooltipster-show
  &.tooltipster-dying
    top 0 !important
    opacity 0
    transition-property all

.tooltipster-slide
  transition-timing-function cubic-bezier(0.175, 0.885, 0.32, 1.15)
  transition-property left

  &.tooltipster-initial
    left -40px !important

  &.tooltipster-show
  &.tooltipster-dying
    left 0 !important
    opacity 0
    transition-property all

@keyframes tooltipster-fading
  0%
    opacity 0

  100%
    opacity 1

.tooltipster-update-fade
  animation tooltipster-fading 400ms

@keyframes tooltipster-scaling
  50%
    transform scale(1.1)

  100%
    transform scale(1)

.tooltipster-update-scale
  animation tooltipster-scaling 600ms

// + Theme Error
.tooltipster-base
  border 1px solid $tooltipster-color
  border-radius 3px
  background $tooltipster-color-bg
  color $tooltipster-color
  font-weight $font-weight-semiBold
  font-size $font-size-small
  line-height 1.33

.tooltipster-danger
  .tooltipster-box
    background $tooltipster-color-bg
    border-radius $border-radius

  .tooltipster-arrow
    border 1px solid $red-error

.tooltipster-success
  .tooltipster-box
    background #f0f8e6
    border-radius $border-radius

  .tooltipster-arrow
    border 1px solid #b7db8d

.tooltipster-top
  .tooltipster-arrow
    width 8px
    height 8px
    top auto

.tooltipster-arrow
  position absolute
  bottom -4px
  left 50%
  width 8px
  height 8px
  transform translateX(-50%) rotate(-45deg)

.tooltipster-arrow-border
  position absolute
  bottom -1px
  left -1px
  width 100%
  height 100%
  background $tooltipster-color

.tooltipster-arrow-background
  position absolute
  width 100%
  height 100%
  background $tooltipster-color-bg

.tooltipster-right
  .tooltipster-arrow
    left -4px
    width 8px
    height 8px
    transform translateY(-50%) rotate(-45deg)

  .tooltipster-arrow-border
    bottom 1px
    left -1px

.tooltipster-bottom
  .tooltipster-arrow
    top -4px
    bottom auto
    width 8px
    height 8px
    transform rotate(45deg)

  .tooltipster-arrow-border
    bottom 1px
    left -1px

.tooltipster-left
  .tooltipster-arrow
    right -4px
    left auto
    width 8px
    height 8px
    transform translateY(-50%) rotate(135deg)

  .tooltipster-arrow-border
    bottom 1px
    left -1px

.tooltipster-success
  border-radius 5px
  border 1px solid #b7db8d
  background #f0f8e6
  box-shadow 0 4px 8px 0 rgba($black, 0.15)
.tooltipster-success .tooltipster-content
  padding 14px
  font-size 14px
  line-height 1.2
  color #56a211
.tooltipster-success .tooltipster-arrow-right span,
.tooltipster-success .tooltipster-arrow-right .tooltipster-arrow-border
  left -8px
.tooltipster-success .tooltipster-arrow-top span,
.tooltipster-success .tooltipster-arrow-top .tooltipster-arrow-border,
.tooltipster-success .tooltipster-arrow-top-right span,
.tooltipster-success .tooltipster-arrow-top-right .tooltipster-arrow-border,
.tooltipster-success .tooltipster-arrow-top-left span,
.tooltipster-success .tooltipster-arrow-top-left .tooltipster-arrow-border
  bottom -7px
.tooltipster-success .tooltipster-arrow-left span,
.tooltipster-success .tooltipster-arrow-left .tooltipster-arrow-border
  top 50%
  right -8px
.tooltipster-success .tooltipster-arrow-bottom span,
.tooltipster-success .tooltipster-arrow-bottom .tooltipster-arrow-border,
.tooltipster-success .tooltipster-arrow-bottom-right span,
.tooltipster-success .tooltipster-arrow-bottom-right .tooltipster-arrow-border,
.tooltipster-success .tooltipster-arrow-bottom-left span,
.tooltipster-success .tooltipster-arrow-bottom-left .tooltipster-arrow-border
  top -8px


.tooltipster-success  .tooltipster-arrow-border
  background #b7db8d


.tooltipster-success  .tooltipster-arrow-background
  background #f0f8e6

.tooltipster-hint-customized
.tooltipster-base.tooltipster-hint-customized
  font 12px/18px $font-family-sans
  border 1px solid darkorange
  color $gray-900
  background $light-orange-200
  box-shadow none
  .tooltipster-arrow-border
    background darkorange

  .tooltipster-arrow-background
    background $light-orange-200

