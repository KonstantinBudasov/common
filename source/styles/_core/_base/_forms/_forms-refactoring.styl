// Validation tooltips
.parsley-errors-list
  padding-top 4px
  padding-left 12px
  text-error()

input
  color $gray-900

// todo use $input-border-color
.form-input
  padding 10px 12px
  width 100%
  border 1px solid white
  border-radius $border-radius
  font-family $font-family-sans
  color $text-color-darken
  font-size $font-size-base
  line-height 16px
  box-shadow inset 0 0 0 1px #aaa
  height 42px
  transition border-color 0.15s ease-in-out

  +above($media-screen-tablet)
    height 34px
    padding 6px 8px

  &:focus
  &.is-focused
    outline none
    // box-shadow 0 0 0 2px #d4d4d4
    border-color white
    box-shadow 0 0 0 2px #d4d4d4, inset 0 0 0 1px #808080

  &:focus:hover
    box-shadow 0 0 0 2px #d4d4d4, inset 0 0 0 1px #808080

  &:hover
    box-shadow inset 0 0 0 1px $gray-500

  +placeholder()
    color $input-placeholder-color

  &.parsley-error
    box-shadow inset 0 0 0 1px $border-color-error

    &:focus
      box-shadow inset 0 0 0 1px $border-color-error

.form-input--textarea
  min-height 76px

.form-input:disabled
  border 1px solid $gray-100
  background-color $light-grey-300
  cursor not-allowed

.form-submit
.button.form-submit
  width 100%
  button-sm()

  +above($media-screen-tablet)
    button-sm()

  +above($media-screen-desktop)
    button-sm()

  +above($media-screen-desktop-lg)
    button-sm()

.form__row
  margin-bottom 12px

.form__row--submit
  margin-top 16px
  margin-bottom 0

.form__label
  display inline-block
  margin-bottom 4px
  color $gray-900
  font-weight $font-weight-bolder
  font-size $font-size-base
  line-height 20px
