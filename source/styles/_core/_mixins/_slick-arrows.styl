slick-arrows()
  .slick-arrow
    position absolute
    bottom 0
    z-index 5
    width 48px
    height 48px
    border none
    border-radius $border-radius-circle
    cursor pointer
    background-repeat no-repeat
    background-size contain
    background-color transparent
    transitions()

    &.slick-arrow--prev
      background-image url("../images/_global/slider/arrow-right.svg")
      left 0

    &.slick-arrow--next
      background-image url("../images/_global/slider/arrow-left.svg")
      left 60px

    &.slick-disabled
      opacity .6
      pointer-events none

    &:focus
    &.is-focused
    &:active
    &.is-active
      outline none
      box-shadow 0 0 0 1px #fff, 0 0 0 3px #d4d4d4

    &:hover
    &.is-hovered
      opacity .8

  .slick-has-arrows
    padding-bottom 80px
