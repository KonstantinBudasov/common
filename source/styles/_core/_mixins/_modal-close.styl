modal-close()
  position absolute
  top 0
  right 0
  z-index 5
  padding 14px
  opacity .5
  cursor pointer
  will-change opacity
  background-color transparent
  border none
  transitions()

  +above($media-screen-tablet-lg)
    padding 16px

  &:before
    content ""
    display block
    width 14px
    height 14px
    background-size cover
    background-repeat no-repeat
    background-image url("../images/_global/modals/icon-close.svg")

  &:hover
  &.is-hovered
    opacity 1

  &:focus
  &.is-focused
  &:active
    outline none
    box-shadow 0 0 0 1px #fff, 0 0 0 3px #d4d4d4
